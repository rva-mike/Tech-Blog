<div class="posts">
    <header class="">


        <div class="mb-2">
            <p class=""></p>
            <a href="/post/{{id}}" class="ms-2 text-decoration-none fs-3 text">{{title}} </a></p>
        </div>
    </header>


    <div class="card">
        <div class="card-body">
            <div class="mb-2">
                {{post_content}}
            </div>

            <div class="">
                <b>{{user.username}}</b>
                | {{format_date created_at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment"
                    comments.length}}</a>
            </div>
        </div>

    </div>
</div>