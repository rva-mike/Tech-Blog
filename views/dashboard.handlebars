<div class="dashboard">

    <div class="">


        <div class="mt-3">

            <h2 class="">Dashboard: Your posts</h2>
            <a href="/dashboard/create/">
                <button id="create-post" class="btn btn-success mt-1 mb-4">create post</button></a>
        </div>
        <hr>

        <div class="dashboard-posts">
            {{#if posts.length}}
            {{#each posts as |post|}}
            <a href="/dashboard/edit/{{post.id}}"><button class="mb-2 btn btn-warning">edit post</button></a>
            {{> post-info post}}

        </div>
    </div>
    {{/each}}

    {{else}}
    <h6 class="">you do not currently have any posts</h6>

    {{/if}}

</div>